{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=PaymentServiceDb;User Id=sa;Password=YourPassword123!;TrustServerCertificate=true;"
  },
  "Jwt": {
    "Authority": "https://localhost:5001",
    "Issuer": "EVCoOwnershipSystem",
    "Audience": "PaymentService"
  },
  "ServiceDiscovery": {
    "ServiceName": "payment-service",
    "ServiceAddress": "localhost",
    "ServicePort": "5003",
    "HealthCheckInterval": "10s",
    "DeregisterAfter": "1m"
  },
  "Consul": {
    "Address": "http://localhost:8500"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": "5672",
    "UserName": "admin",
    "Password": "admin123",
    "VirtualHost": "/"
  },
  "CircuitBreaker": {
    "FailureThreshold": 5,
    "Timeout": "00:00:30",
    "RetryTimeout": "00:01:00"
  },
  "RateLimiting": {
    "Default": 1000,
    "Payment": 100,
    "Wallet": 500
  },
  "Timeouts": {
    "Database": 30,
    "ExternalAPI": 60,
    "PaymentGateway": 120
  },
  "Features": {
    "CircuitBreaker": true,
    "DistributedTracing": true,
    "MessageQueue": true,
    "ServiceDiscovery": true
  },
  "OpenTelemetry": {
    "JaegerEndpoint": "http://localhost:14268/api/traces",
    "ServiceName": "payment-service",
    "ServiceVersion": "1.0.0"
  },
  "Encryption": {
    "Key": "your-32-character-encryption-key-here"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/payment-service-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
